@model GeneralSettingsDataTransfer
@{
    ViewData["Title"] = "Edit General Settings";
}

<h2>Editar</h2>

<h4>Configuracion General</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaxRequestsByIP" class="control-label"></label>
                <input asp-for="MaxRequestsByIP" class="form-control" />
                <span asp-validation-for="MaxRequestsByIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxRequestsByEndpoint" class="control-label"></label>
                <input asp-for="MaxRequestsByEndpoint" class="form-control" />
                <span asp-validation-for="MaxRequestsByEndpoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
